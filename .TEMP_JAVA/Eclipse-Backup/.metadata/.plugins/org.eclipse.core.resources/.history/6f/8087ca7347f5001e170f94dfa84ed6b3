import java.util.Scanner;

public class Corretora {

	public static void main(String[] args) {
		Scanner t = new Scanner(System.in);
		Imovel imoveis[] = new Imovel[5];
		
		for(int i=0;i<=imoveis.length;i++) {
			System.out.println("Tipo: (1 para novo e 2 para velho)");
			int tipo = t.nextInt();
			if(tipo==1) {
				imoveis[i]= new Novo();
			} else if(tipo==2) {
				imoveis[i] = new Velho();
			}
			
			System.out.print("Endereco: ");
			String end = t.nextLine();
			imoveis[i].setEndereco(end);
			
			System.out.print("PreÃ§o: ");
			double preco = Double.parseDouble(t.nextLine());
			imoveis[i].setPreco(preco);
			
		}
		
		for(int i=0;i<=imoveis.length;i++) {
			System.out.println(imoveis[i].getPreco());
			
		}

		
		
	}
}
