package questao2_1;

public class inverteNaMarra {
	public static void main(String[] args) {
		inverte("PARALELISMO");
	}
	
	public static String inverte(String a) {
	    String divisao[] = a.split("");
	    StringBuilder invertida = new StringBuilder();
	    for (int i = 0; i < divisao.length; i++) {
	        switch (divisao[i]) {
	            case "A":
	                invertida.append("4");
	                break;
	            case "E":
	                invertida.append("3");
	                break;
	            case "I":
	                invertida.append("1");
	                break;
	            case "O":
	                invertida.append("0");
	                break;
	            default:
	                invertida.append(divisao[(divisao.length - 1) - i]);
	        }
	    }
	    System.out.println(invertida.toString());

	}

}
